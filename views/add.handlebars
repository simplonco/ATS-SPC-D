<h2 class="page-header">Add Day</h2>
<form method="post" action="/users/add">
    <div class="form-group">
        <label>Choose Date</label>
            <div class="input-group date" id="sandbox-container">
              <input type="text" class="form-control" name="date"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
            </div>
        </div>
     <div class="form-group">
        <label>Message</label>
        <input type="text" class="form-control" name="message" placeholder="message">
     </div>
     <button type="submit" class="btn btn-default">Submit</button>
     <script type="text/javascript">

         $(function () {

                     $('#sandbox-container').datepicker({
                                 weekStart: 1,
                                 todayBtn: "linked",
                                 language: "fr",
                                 daysOfWeekDisabled: "0,6",
                                 calendarWeeks: true,
                                 autoclose: true,
                                 todayHighlight: true,
                                 datesDisabled: ['08/06/2016', '08/21/2016']

                     });
                 });
         </script>
 </form>
